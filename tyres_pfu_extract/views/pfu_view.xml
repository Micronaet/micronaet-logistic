<?xml version="1.0"?>
<openerp>
    <data>
        <!-- stock.picking.delivery.quant -->
        <record model="ir.ui.view" id="view_stock_picking_delivery_quant_form">
            <field name="name">stock.picking.delivery.quant.form</field>
            <field name="model">stock.picking.delivery.quant</field>
            <field name="inherit_id" ref="tyres_logistic_pick_in_load.view_stock_picking_delivery_quant_form" />
            <field name="arch" type="xml">
                <field name="account_sync" readonly="1" position="after">
                    <separator string="Assegnazioni PFU" colspan="4"/>
                    <field name="assigned_pfu_ids" readonly="1" colspan="4">
                        <field name="date" />
                        <field name="move_id" />
                        <field name="product_qty" />
                        <field name="file_id" />
                        <field name="quant_id" invisible="1" />
                    </field>
                </field>
            </field>
        </record>

        <record id="view_stock_picking_pfu_extract_wizard" model="ir.ui.view">
            <field name="name">PFU Report</field>
            <field name="model">stock.picking.pfu.extract.wizard</field>
            <field name="arch" type="xml">
              <form string="Extract excel status:">
                  <header>
                      <button string="Cancel" class="btn-default" special="cancel" />
                      <button name="extract_excel_pfu_report" string="Report Excel" type="object" class="btn-primary" attrs="{'invisible': [('mode', '!=', 'extra')]}"/>
                      <button name="extract_fiscal_excel_pfu_report" string="Report Fiscale" type="object" attrs="{'invisible': [('mode', '!=', 'extra')]}" />

                      <button name="extract_excel_pfu_company_report" string="Report PFU da Mag. interno" type="object" attrs="{'invisible': [('mode', '!=', 'internal')]}" />
                  </header>
                  <sheet>                  
                      <group colspan="4" col="4">
                          <field name="mode" />
                          <field name="partner_id" attrs="{'invisible': [('mode', '!=', 'extra')]}" />
                          <newline/>
                          <field name="from_date" attrs="{'invisible': [('mode', '!=', 'extra')], 'required': [('mode', '=', 'extra')]}" />
                          <field name="to_date" attrs="{'invisible': [('mode', '!=', 'extra')], 'required': [('mode', '=', 'extra')]}" />
                      </group>    
                  </sheet>
              </form>
            </field>
        </record>
        <record id="action_stock_picking_pfu_extract_wizard" model="ir.actions.act_window">
            <field name="name">PFU Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking.pfu.extract.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_stock_picking_pfu_extract_wizard"/>
            <field name="target">new</field>
        </record>

        <!--res.company-->
        <record model="ir.ui.view" id="view_res_company_logistic_parameter_form">
            <field name="name">res.company.pfu.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="tyres_logistic_management.view_res_company_logistic_parameter_form"/>
            <field name="arch" type="xml">
                <field name="cups_sale_ddt" position="after">
                    <separator string="PFU Setup:" colspan="4"/>
                    <field name="pfu_month" />
                    <field name="pfu_remove_days" />
                    <!--<field name="pfu_use_filter" widget="boolean_toggle" />-->
                    <field name="pfu_debug" widget="boolean_toggle" />
                </field>
            </field>
        </record>

        <!--stock.pfu.document-->
        <record model="ir.ui.view" id="view_stock_pfu_document_tree">
            <field name="name">stock.pfu.document.tree</field>
            <field name="model">stock.pfu.document</field>
            <field name="arch" type="xml">
                <tree string="Documenti PFU" editable="bottom">
                    <field name="date" readonly="1"/>
                    <field name="filename" readonly="1"/>
                    <field name="user_id" readonly="1"/>
                    <button name="return_filename_excel" type="object" string="Scarica file" icon="fa-file-text fa-x2"/>
                </tree>
            </field>
        </record>
        <record id="action_view_stock_pfu_document" model="ir.actions.act_window">
            <field name="name">PFU Files</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.pfu.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_stock_pfu_document_tree"/>
        </record>

        <!--account.fiscal.position-->
        <record model="ir.ui.view" id="view_pfu_account_fiscal_position_form">
            <field name="name">account.fiscal.position.need.invoice.pfu.form</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="is_pfu" />
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_pfu_account_fiscal_position_tree">
            <field name="name">account.fiscal.position.pfu.tree</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="before">
                    <field name="is_pfu" />
                </field>
            </field>
        </record>

        <menuitem 
            parent="tyres_logistic_management.menu_logistic_left_report_root"
            sequence="30"
            id="menu_stock_picking_pfu_extract_wizard" 
            action="action_stock_picking_pfu_extract_wizard"
            />
        <menuitem
            parent="tyres_logistic_management.menu_logistic_left_report_root"
            sequence="30"
            id="menu_view_stock_pfu_document"
            action="action_view_stock_pfu_document"
            />
    </data>
</openerp>
