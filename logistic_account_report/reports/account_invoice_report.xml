<?xml version="1.0" encoding="utf-8"?>
<openerp>
   <data>
        <!--Report template:-->
        <template id="report_account_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                             <!-- HEADER: -->
                            <div class="oe_structure"/>                            
                            <div class="row">
                                <div class="col-xs-2">
                                    <!--LOGO-->
                                    <img t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height: 45px;"/>                                   
                                </div>
                                <div class="col-xs-4">
                                    <span f-field="res_company.partner_id.name" />                                    
                                </div>    
                                <div class="col-xs-6">
                                </div>    
                            </div>                            
                            <div class="oe_structure"/>
                            <hr />
                            
                             <!-- DESTINATION BOX: -->
                            <div class="oe_structure"/>                            
                            <div class="row">
                                <div class="col-xs-5">
                                    Destinatario
                                </div>    
                                <div class="col-xs-1">
                                </div>                                
                                <div class="col-xs-6">
                                    Destinazione
                                </div>    
                            </div>    
                            <div class="oe_structure"/>
                            <div class="row">
                                <div class="col-xs-5" style="height: 150px; border: 1px solid black;">
                                    <span f-field="o.partner_id.name" />
                                </div>    
                                <div class="col-xs-1">
                                </div>                                
                                <div class="col-xs-6" style="height: 150px; border: 1px solid black;">
                                    <span f-field="o.partner_id.name" />
                                </div>    
                            </div>    
                            <div class="oe_structure"/>
                            
                            <!-- DETAIL: -->
                            <br />
                            <div class="oe_structure"/>                            
                            <div class="row">
                                <div class="col-xs-1">
                                    Codice
                                </div>    
                                <div class="col-xs-4">
                                    Descrizione
                                </div>    
                                <div class="col-xs-1">
                                    Quantit√†
                                </div>    
                                <div class="col-xs-2">
                                    Prezzo Ivato
                                </div>    
                                <div class="col-xs-1">
                                    Sconto
                                </div>    
                                <div class="col-xs-2">
                                    Importo
                                </div>    
                                <div class="col-xs-1">
                                    IVA
                                </div>    
                            </div>    
                            <div class="oe_structure"/>

                            <t t-foreach="o.move_lines" t-as="move">
                                <div class="row">
                                    <div class="col-xs-1">
                                        <span t-field="move.product_id.product_tmpl_id.default_code" />
                                    </div>    
                                    <div class="col-xs-4">
                                        <span t-field="move.product_id.name" />
                                    </div>    
                                    <div class="col-xs-1">
                                        <span t-esc="int(move.product_uom_qty)" />
                                    </div>    
                                    <div class="col-xs-2">
                                        XX
                                    </div>    
                                    <div class="col-xs-1">
                                        XX
                                    </div>    
                                    <div class="col-xs-2">
                                        XX
                                    </div>    
                                    <div class="col-xs-1">
                                        XX
                                    </div>
                                </div> 
                            </t>
                            
                            <!-- VAT: -->
                            <br />
                            <div class="oe_structure"/>                            
                            <div class="row">
                                <div class="col-xs-6" style="height: 60px; border: 1px solid black;">
                                    IVA
                                    
                                </div>
                                <div class="col-xs-3" style="height: 60px; border: 1px solid black;">
                                    Imponibile
                                    
                                </div>
                                <div class="col-xs-3" style="height: 60px; border: 1px solid black;">
                                    Imposta
                                    
                                </div>
                            </div>    

                            <!-- Bottom invoice: -->
                            <div class="oe_structure"/>                            
                            <div class="row">
                                <div class="col-xs-6" style="height: 60px;">
                                    Pagamento:
                                </div>
                                <div class="col-xs-3" style="height: 60px;">
                                    Tot. importi
                                </div>
                                <div class="col-xs-3" style="height: 60px;">
                                    XX                                    
                                </div>
                            </div>    
                            <div class="row">
                                <div class="col-xs-9" style="height: 60px;">
                                </div>
                                <div class="col-xs-3" style="height: 60px;">
                                    Spese di Trasporto
                                </div>
                                <div class="col-xs-3" style="height: 60px;">
                                    XX                                    
                                </div>
                            </div>    
                            <div class="row">
                                <div class="col-xs-3" style="height: 60px;">
                                    Scadenze: 
                                </div>
                                <div class="col-xs-3" style="height: 60px;">
                                    XX
                                </div>
                                <div class="col-xs-6" style="height: 60px;">
                                </div>
                            </div>    
                            <div class="row">
                                <div class="col-xs-6" style="height: 60px;">
                                    XXX
                                    XX
                                </div>
                                <div class="col-xs-3" style="height: 60px;">
                                    Tot. documento
                                </div>
                                <div class="col-xs-3" style="height: 60px;">
                                    XXXX
                                </div>
                            </div>    

                            <!-- IMPORTANT: -->
                            <br />
                            <div class="oe_structure"/>                            
                            <div class="row">
                                <div class="col-xs-12" style="border: 1px solid black;">
                                    Ai sensi del D.Lgs. 196/2003 Vi informiamo che i Vs. dati saranno utilizzati esclusivamente per i fini connessi ai rapporti commerciali tra di noi in essere.
                                    Contributo CONAI assolto ove dovuto - Vi preghiamo di controllare i Vs. dati anagrafici, la P. IVA e il Cod. Fiscale. Non ci riteniamo responsabili di eventuali errori.
                                </div>    
                            </div>    
                            <div class="oe_structure"/>
                             
                                                        
                        </div>
                    </t>
                </t>
            </t>
        </template>   
        <template id="report_invoice_lang">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="logistic_account_report.report_account_invoice" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <!--Report action:-->
        <report
            id="action_report_invoice_lang"
            model="stock.picking"
            string="Account Invoice report"
            report_type="qweb-pdf"
            name="logistic_account_report.report_invoice_lang"
            file="logistic_account_report.report_invoice_lang"
            attachment_use="True"
            attachment="'%s.pdf' % (object.invoice_number or 'draft').replace('/', '_')"
            print_report_name="'%s.pdf' % (object.invoice_number or 'draft').replace('/', '_')"
            paperformat="paperformat_accounting"
        />

   </data>
</openerp>
