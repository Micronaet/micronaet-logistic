<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_res_users_cups_inherits_form">
            <field name="name">res.users.cups.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <!--<page name="access_rights" position="after">
                    <page string="Printer">
                        <group colspan="4" col="4">
                            <field name="default_printer_id" />
                        </group>
                    </page>
                </page>-->
                <field name="action_id" position="after">
                     <field name="default_printer_id" />                    
                </field>
            </field>
        </record>
        <record id="view_cups_printer_tree" model="ir.ui.view">
            <field name="name">CUPS Printer</field>
            <field name="model">cups.printer</field>
            <field name="arch" type="xml">
              <tree string="CUPS Printer:" editable="bottom">
                  <field name="name" />
                  <field name="note" />
              </tree>
            </field>
        </record>
        <record id="action_cups_printer" model="ir.actions.act_window">
            <field name="name">CUPS Printer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cups.printer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_cups_printer_tree"/>
        </record>
        <menuitem 
            parent="base.menu_custom"
            sequence="50"
            id="menu_cups_printer_root" 
            name="CUPS Management"
            />
            <menuitem 
                parent="menu_cups_printer_root" 
                id="menu_cups_printer" 
                action="action_cups_printer"
                sequence="10"
                />
            
    </data>
