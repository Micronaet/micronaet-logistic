<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_cups_printer_tree" model="ir.ui.view">
            <field name="name">CUPS Printer</field>
            <field name="model">cups.printer</field>
            <field name="arch" type="xml">
              <form string="CUPS Printer:">
                  <sheet>                  
                      <group colspan="4" col="4">
                          <field name="code" />
                          <field name="name" />
                          <separator string="Note" colspan="4"/>
                          <field name="note" colspan="4" nolabel="1"/>
                      </group>    
                  </sheet>
              </form>
            </field>            
        </record>
        <record id="action_cups_printer" model="ir.actions.act_window">
            <field name="name">CUPS Printer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cups.printer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_cups_printer_tree"/>
        </record>
        <menuitem 
            parent="base.menu_custom"
            sequence="50"
            id="menu_cups_printer_root" 
            name="CUPS Management"
            />
            <menuitem 
                parent="menu_cups_printer_root" 
                id="menu_cups_printer" 
                action="action_cups_printer"
                sequence="10"
                />
            
    </data>
</openerp>
